<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStartedActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/get_started"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/titleGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/app_name1"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/descriptionGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/worksans_light"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/titleGetStarted"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/titleGetStarted"
        app:layout_constraintTop_toBottomOf="@+id/titleGetStarted"
        tools:ignore="SmallSp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:minWidth="200dp"
        android:paddingHorizontal="16dp"
        android:text="@string/btnGetStarted"
        android:textColor="@color/white"
        app:backgroundTint="@color/oliveGreen"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="@+id/descriptionGetStarted"
        app:layout_constraintStart_toStartOf="@+id/descriptionGetStarted"
        app:layout_constraintTop_toBottomOf="@+id/descriptionGetStarted" />

</androidx.constraintlayout.widget.ConstraintLayout>